U='#ws+vL76U9DS'
P='c=j)5vU6HlqE!Hn1'

b64=$(printf '%s:%s' "$U" "$P" | base64)
echo -e "$U\n$P\n$b64"

echo Decoded:
echo $b64 | base64 --decode
echo 

#curl -i -u$U:$P -H 'Accept:application/json' https://robot-ws.your-server.de/server
curl -H "Authorization: Basic $b64" -H 'Accept:application/json' -k -i https://robot-ws.your-server.de/server
